# syntax=docker/dockerfile:1
ARG BUILDPLATFORM="linux/arm64"
ARG TARGETBUILD="linux/amd64"
ARG DEBIAN_FRONTEND="noninteractive"
ARG arch_qemu="aarch64"
ARG release="bullseye"
FROM --platform=${BUILDPLATFORM} debian:${release}-slim AS ncp
ARG BUILDPLATFORM
ARG TARGETBUILD
ARG DEBIAN_FRONTEND
ARG release
ARG arch_qemu
ENV DOCKERBUILD 1
CMD ["/bin/bash", "-c"]
COPY ./run-parts.sh /
COPY --from=zendai/qemu:latest /usr/bin/qemu-${arch_qemu}-static /usr/bin/
RUN ["/bin/bash", "-c", "mkdir -p /etc/services-available.d  /etc/services-enabled.d"]
